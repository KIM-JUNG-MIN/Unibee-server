extends ./view-template

block styles
  link(rel='stylesheet', href='/public/css/bee-style.css')

  //jquery, colorpicker, slider, toogle, load local file
  link(href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.1.3/css/bootstrap-slider.min.css', rel='stylesheet')
  link(href='https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css', rel='stylesheet')

block content
  body(ng-app='drawApp', ng-controller='drawCtrl')
    ul.iconmenu
      li
        a(href='#', rel='csslibrary')
          span.fa.fa-mouse-pointer
      li
        a(href='#', rel='webtools', title='Web Tools')
          span.fa.fa-pencil
      li
        a(href='#', rel='[title]', title='RSS')
          span.fa.fa-eraser
      li
        label(for='fileInput')
          span.fa.fa-picture-o
        input#fileInput(type='file', style='display: none;')

      li
        button.jscolor(class="{onFineChange:'changeColor(this)', valueElement:null}", value='fff')  

    .btn-group(role='group')
      button#btn_png.btn.btn-default(type='button') exportPNG
    
    br
    br
    input#ex8(
      data-slider-id='ex1Slider',
      type='text',
      data-slider-min='1',
      data-slider-max='20',
      data-slider-step='1',
      data-slider-value='5')

    label.checkbox-inline
      input#toggle-erase(data-toggle='toggle', type='checkbox')
      |  Erase

    h1 Uniee whieboard

    button#btn_img_up.btn.btn-default(type='button') +
    button#btn_img_down.btn.btn-default(type='button') -
    button#btn_img_delete.btn.btn-default(type='button') x

    canvas#myCanvas(drawing-board)


block scripts
  script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.1.3/bootstrap-slider.js')
  script(src='https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jscolor/2.0.4/jscolor.js')
  
  //socket.io
  script(src="/socket.io/socket.io.js")

  //paper.js
  script(type='text/javascript', src='/node_modules/paper/dist/paper-full.js')
  script(type='text/javascript', src='/public/controllers/draw-app.js')
  script(type='text/javascript', src='/public/controllers/drawCtr-controller.js')
